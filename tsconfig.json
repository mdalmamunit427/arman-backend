{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    
    "types": ["node", "express"] // ✅ Express + Node types include করা হলো
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
